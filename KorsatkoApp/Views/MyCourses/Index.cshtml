@model IEnumerable<Enrollment>

@{
	Layout = "_LoggedInLayout";
}

@section Styles {
	<link rel="stylesheet" href="~/website/css/wave.css">
}

<div class="content-wrapper d-flex flex-column flex-grow-1">
	<div class="wave header">
		<div>
			<svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
				 viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
				<defs>
					<path id="gentle-wave"
						  d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
				</defs>

				<g class="parallax">
					<use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7" />
					<use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
					<use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)" />
					<use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
				</g>
			</svg>

		</div>
	</div>

	<div class="bg-white flex-grow-1">
		<div class="container">
			<h2 class="mt-3">دوراتي</h2>

			
			

			<div class="row pb-5">
				@if (Model.Count() == 0)
				{
					<div class="my-3">
						<div class="alert alert-light d-flex flex-column align-items-center">
							<div class="fs-5 text-center my-3 text-muted">
								أنت غير مشترك في أي دورات.
							</div>

							<a asp-area="" asp-controller="Home" asp-action="Courses" class="btn text-white bg-primary-gradient glow-on-hover mb-3">
								اشترك الآن
							</a>
						</div>
					</div>
				}
				else
				{
					@foreach (var item in Model)
					{
						<div class="col-12 col-lg-6 mt-3">
							<div class="card course-card">
								<div class="card-body">
									<div class="d-flex flex-column flex-sm-row">
										<div class="my-3 mx-auto mx-sm-3">
											@if (item.session.course.Picture == "" || item.session.course.Picture == null) {
												<img src="~/website/img/tracks/backend.svg" alt="@item.session.course.Name">
											} else {
												<img src="~/Uploads/@item.session.course.Picture" alt="@item.session.course.Name">
											}
										</div>

										<div class="px-3 my-auto text-center text-sm-start">
											<h4 class="mb-3">@item?.session?.course?.Name</h4>
											<a asp-controller="Home" asp-action="CourseDetails" asp-route-id="@item.session.course.Id" class="btn btn-outline-primary">تفاصبل الدورة</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				}
			</div>
		</div>
	</div>
</div>
