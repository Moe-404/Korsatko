@model IEnumerable<Instructor>


@{
    Layout = "_DatatableAdminLayout";
}

@section TableHeader {
    <tr>
        <th>الاسم بالكامل</th>
        <th>الجنس</th>
        <th>رقم الهاتف</th>
        <th>المؤهلات</th>
        <th>الرقم القومي</th>
        <th>سنوات الخبرة</th>
        <th>البريد الإلكتروني</th>
        <th></th>
    </tr>
}

@section TableRows {
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            @if (item.Gender == 'f')
            {
                <td>انثى</td>
            }
            else
            {
                <td>ذكر</td>
            }
            <td>@item.PhoneNumber</td>
            <td>@item.Qualifications</td>
            <td>@item.NationalId</td>
            <td>@item.ExperienceYears</td>
            <td>@item.Email</td>

            <td class="text-nowrap">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn icon-btn-sm btn-outline-primary m-1">
                    <i class="fas fa-info"></i>
                </a>

                <a asp-action="Edit" asp-route-id="@item.Id" class="btn icon-btn-sm btn-outline-primary m-1">
                    <i class="fas fa-edit"></i>
                </a>

                <a asp-action="Delete" asp-route-id="@item.Id" class="btn icon-btn-sm btn-outline-danger m-1">
                    <i class="fas fa-trash"></i>
                </a>

            </td>
        </tr>
    }
}
