
@{
    string? controller = Context?.GetRouteValue("Controller")?.ToString();
    string? action = Context?.GetRouteValue("action")?.ToString();
}


<!DOCTYPE html>
<html lang="ar">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@(ViewData["Title"] == null ? "كورساتكو" : ViewData["Title"] + " - كورساتكو")</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&family=Cairo:wght@300;400;700&display=fallback">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/admin/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/admin/plugins/adminlte/css/adminlte-rtl.css">

    @await RenderSectionAsync("Styles", required: false)

    <link rel="stylesheet" href="~/admin/css/style.css">

    @* Dynamic Style *@
    <style>
        .sidebar-logo {
            background-image: url(@Href("~/admin/img/logo-en-light.png"));
        }

        .sidebar-collapse .sidebar-logo {
            background-image: url(@Href("~/admin/img/logo-k-icon.png"));
        }
    </style>


</head>

<body class="hold-transition sidebar-mini layout-fixed rtl">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link active">
                        <p class="arabic">الصفحة الرئيسية</p>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" onClick="(function(){print();})();return false;" class="nav-link">
                        <p class="arabic">طباعة الصفحة </p>
                    </a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-light elevation-4">
            <!-- Brand Logo -->
            <a asp-area="" asp-controller="Home" asp-action="Index" class="mt-3 mb-1 mx-4 d-flex justify-content-center glow-on-hover darken">
                <div class="sidebar-logo"></div>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">

                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index"
                               class="nav-link @(controller == "Home" && action == "Index" ? "active" : "")">

                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p class="arabic sidebar-text">
                                    لوحة القيادة
                                </p>
                            </a>
                        </li>

                        <li class="nav-item @(controller == "Courses" || controller == "Sessions" ? "menu-is-opening menu-open" : "")">
                            <a style="cursor:pointer;" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p style="cursor:pointer;" class="arabic sidebar-text">الكورسات</p>
                                <i class="fas fa-angle-left left arrow"></i>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Courses" asp-action="Index"
                                        class="nav-link @(controller == "Courses" && action == "Index" ? "active" : "")">

                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض الكورسات</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Sessions" asp-action="Index"
                                       class="nav-link @(controller == "Sessions" && action == "Index" ? "active" : "")">

                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض المواعيد</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Courses" asp-action="Create"
                                       class="nav-link @(controller == "Courses" && action == "Create" ? "active" : "")">

                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة كورس</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Sessions" asp-action="Create"
                                       class="nav-link @(controller == "Sessions" && action == "Create" ? "active" : "")">

                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة معاد</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item @(controller == "Instructors" ? "menu-is-opening menu-open" : "")">
                            <a style="cursor:pointer;" class="nav-link">
                                <i class="nav-icon fas fa-chalkboard-teacher"></i>
                                <p style="cursor:pointer;" class="arabic sidebar-text">المدربين</p>
                                <i class="fas fa-angle-left left arrow"></i>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Instructors" asp-action="Index"
                                       class="nav-link @(controller == "Instructors" && action == "Index" ? "active" : "")">

                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض المدربين</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Instructors" asp-action="Create"
                                       class="nav-link @(controller == "Instructors" && action == "Create" ? "active" : "")">

                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة مدرب</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item @(controller == "Students" ? "menu-is-opening menu-open" : "")">
                            <a style="cursor:pointer;" class="nav-link">
                                <i class="nav-icon fas fa-book-reader"></i>
                                <p style="cursor:pointer;" class="arabic sidebar-text">الطلاب</p>
                                <i class="fas fa-angle-left left arrow"></i>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Students" asp-action="Index"
                                       class="nav-link @(controller == "Students" && action == "Index" ? "active" : "")">

                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض الطلاب</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Students" asp-action="Create"
                                       class="nav-link @(controller == "Students" && action == "Create" ? "active" : "")">

                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة طالب</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item @(controller == "Sessions" ? "menu-is-opening menu-open" : "")">
                            <a style="cursor:pointer;" class="nav-link">
                                <i class="nav-icon far fa-clipboard"></i>
                                <p style="cursor:pointer;" class="arabic sidebar-text">الاشتراكات</p>
                                <i class="fas fa-angle-left left arrow"></i>
                            </a>

                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Enrollments" asp-action="Index"
                                       class="nav-link @(controller == "Enrollments" && action == "Index" ? "active" : "")">

                                        <i class="nav-icon fas fa-table"></i>
                                        <p class="arabic">عرض الاشتراكات</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Enrollments" asp-action="Create"
                                       class="nav-link @(controller == "Enrollments" && action == "Create" ? "active" : "")">

                                        <i class="nav-icon fas fa-plus"></i>
                                        <p class="arabic">إضافة اشتراك</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div>
                <span class="arabic sm">
                    حقوق الطبع والنشر
                </span>
                <!-- <strong> -->
                &copy;
                2023
                Korsatko.
                <!-- </strong> -->
                <span class="arabic sm">
                    جميع الحقوق محفوظة.
                </span>
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->




    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/admin/plugins/adminlte/js/adminlte.min.js"></script>

    <!-- ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    @await Component.InvokeAsync("NToastNotify")

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>