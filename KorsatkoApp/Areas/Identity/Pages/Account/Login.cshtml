@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="content-wrapper">
    <div class="fading-bg px-2 pb-5">
        <div class="login-page-card">
            <div>
                <div class="login-page-header mt-2">تسجيل الدخول</div>

                <form class="mt-4" form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" for="email">البريد الالكتروني</label>
                        <input asp-for="Input.Email" type="email"
                               class="form-control ltr-right mt-2"
                               >

                        <div class="form-text text-danger">
                            <span asp-validation-for="Input.Email" id="email_error"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" for="password">كلمة المرور</label>
                        <input asp-for="Input.Password" type="password"
                               class="form-control ltr-right mt-2">

                        <div class="form-text text-danger">
                            <span asp-validation-for="Input.Password" id="password_error"></span>
                        </div>
                    </div>

                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    
                    <div class="form-text">
                        ليس لديك حساب؟
                        <a asp-area="Identity" asp-controller="Account" asp-action="Register">انشئ حساب جديد</a>.
                    </div>

                    <div class="form-text text-danger">
                        <span id="form_error"></span>
                    </div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">تسجيل الدخول</button>
                </form>
            </div>
        </div>
    </div>
</div>

